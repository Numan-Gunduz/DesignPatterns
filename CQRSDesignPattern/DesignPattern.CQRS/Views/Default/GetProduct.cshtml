@model DesignPattern.CQRS.CQRSPattern.Results.GetProductByIDQueryResult

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ürün Detayları</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 50px;
        }

        .card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .btn-custom {
            background-color: #007bff;
            color: white;
        }

            .btn-custom:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h4>Ürün Detayları</h4>
                    </div>
                    <div class="card-body">
                        <p><strong>ID:</strong> @Model.ProductID</p>
                        <p><strong>Ürün Adı:</strong> @Model.Name</p>
                        <p><strong>Stok:</strong> @Model.Stock</p>
                        <p><strong>Fiyat:</strong> @Model.Price.ToString("C")</p>
                    </div>
                    <div class="card-footer text-end">
                        <a href="/Default/Index" class="btn btn-secondary">Geri Dön</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
