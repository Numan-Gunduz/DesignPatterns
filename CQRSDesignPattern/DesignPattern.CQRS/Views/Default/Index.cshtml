@model List<DesignPattern.CQRS.CQRSPattern.Results.GetProductQueryResult>


@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ürün Yönetimi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 50px;
        }

        table {
            background: #fff;
        }

        .btn-custom {
            background-color: #007bff;
            color: #fff;
        }

            .btn-custom:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="text-center mb-4">Ürün Yönetim Paneli</h2>

        <!-- Ürün Ekle Butonu -->
        <div class="text-end mb-3">
            <a href="/Default/AddProduct" class="btn btn-custom">Yeni Ürün Ekle</a>
        </div>

        <!-- Ürünler Tablosu -->
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Ürün Adı</th>
                    <th>Stok</th>
                    <th>Fiyat</th>
                    <th>Açıklama</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.ProductID</td>
                        <td>@product.ProductName</td>
                        <td>@product.ProductStock</td>
                        <td>@product.ProductPrice</td>
                        <td>@product.ProductDescription</td>
                        <td>@(product.ProductStatus==true ? "Aktif" : "Pasif")</td>
                        <td>
                            <form method="post" asp-action="Delete" asp-route-id="@product.ProductID" style="display:inline-block;">
                                <button class="btn btn-danger btn-sm">Sil</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
