@model List<RepositoryDesignPattern.EntityLayer.Concrete.Product>

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ürün Listesi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Ürün Listesi</h2>
        <div class="mb-3 text-end">
            <a href="/Product/AddProduct" class="btn btn-success">Yeni Ürün Ekle</a>
        </div>
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Ad</th>
                    <th>Stok</th>
                    <th>Fiyat</th>
                    <th>Kategori</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.ProductID</td>
                        <td>@product.ProductName</td>
                        <td>@product.ProductStock</td>
                        <td>@string.Format("{0:C}", product.ProductPrice)</td>
                        <td>@(product.Category != null ? product.Category.CategoryName : "Kategori Yok")</td>
                        <td>
                            <a href="/Product/UpdateProduct?id=@product.ProductID" class="btn btn-warning btn-sm">Güncelle</a>
                            <a href="/Product/DeleteProduct?id=@product.ProductID" class="btn btn-danger btn-sm">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
